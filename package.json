{
  "name": "cypher-query-builder",
  "version": "3.7.0",
  "description": "An intuitive, easy to use query builder for Neo4j and Cypher",
  "main": "dist/index.js",
  "author": "James Ferguson",
  "license": "MIT",
  "repository": "github:jamesfer/cypher-query-builder",
  "typings": "dist/index.d.ts",
  "engines": {
    "node": ">=6"
  },
  "keywords": [
    "cypher",
    "query",
    "builder",
    "neo4j",
    "orm",
    "graph"
  ],
  "scripts": {
    "commit": "git-cz",
    "build": "webpack --progress",
    "build:prod": "webpack --progress --env.production",
    "lint": "tslint --project ./tsconfig.lint.json",
    "test": "docker-compose -f docker/docker-compose.test.yml -p cypher-query-builder up --exit-code-from tests",
    "test:unit": "nyc --reporter=html --reporter=text-summary mocha src/*.spec.ts src/**/*.spec.ts",
    "validate": "yarn --silent lint && yarn --silent build:prod && yarn --silent test",
    "release": "./scripts/release.sh",
    "merge": "./scripts/merge.sh",
    "docs": "typedoc src/builder.ts src/query.ts src/connection.ts src/clauses/index.ts src/clauses/where-comparators.ts src/clauses/where-operators.ts --mode file --theme minimal --out ./docs --excludeExternals --excludeProtected --excludePrivate --ignoreCompilerErrors"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "release": {
    "verifyConditions": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      "@semantic-release/git"
    ],
    "prepare": [
      {
        "path": "@semantic-release/changelog",
        "changelogFile": "CHANGELOG.md"
      },
      "@semantic-release/npm",
      {
        "path": "@semantic-release/git",
        "assets": [
          "package.json",
          "CHANGELOG.md"
        ],
        "message": "chore(release): ${nextRelease.version}\n\n${nextRelease.notes}\n[skip ci]\n"
      }
    ]
  },
  "nyc": {
    "all": true,
    "produce-source-map": true,
    "report-dir": "./coverage",
    "extension": [
      ".ts",
      ".tsx"
    ],
    "require": [
      "ts-node/register",
      "source-map-support/register"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "**/*.spec.ts",
      "**/*.mock.ts"
    ]
  },
  "dependencies": {
    "any-observable": "^0.3.0",
    "any-promise": "^1.3.0",
    "lodash": "^4.17.5",
    "neo4j-driver": "^1.5.0",
    "node-cleanup": "^2.1.2"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^3.0.0",
    "@semantic-release/git": "^7.0.4",
    "@types/chai": "^4.0.4",
    "@types/chai-as-promised": "^7.1.0",
    "@types/lodash": "^4.14.77",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.10.3",
    "@types/sinon": "^5.0.2",
    "chai": "^4.0.2",
    "chai-as-promised": "^7.0.0",
    "commitizen": "^2.10.1",
    "coveralls": "^3.0.0",
    "cz-conventional-changelog": "^2.1.0",
    "mocha": "^5.2.0",
    "nyc": "^13.0.1",
    "rimraf": "^2.6.2",
    "rxjs": "^6.3.2",
    "semantic-release": "^15.5.1",
    "sinon": "^6.3.4",
    "source-map-support": "^0.5.0",
    "ts-loader": "^5.2.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.9.1",
    "tslint-config-airbnb": "^5.7.0",
    "typedoc": "^0.12.0",
    "typescript": "^3.0.3",
    "uglifyjs-webpack-plugin": "^2.0.1",
    "webpack": "^4.19.1",
    "webpack-node-externals": "^1.6.0"
  },
  "peerDependencies": {
    "rxjs": "^5.5.6"
  }
}
